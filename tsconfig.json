{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["lodash"],
    "lib": ["ES2019", "DOM"]
  },
  "include": ["packages/*/src/**/*", "src/**/*"]
}
