{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["packages/*"],
      "@test-utils": ["__test__/test-utils"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/__test__/**/*",
    "__test__/**/*"
  ]
}
