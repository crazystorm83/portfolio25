{
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./.ts-temp",
    "outDir": "./.ts-temp",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "**/dist/**",
    "**/@types/**",
    "**/node_modules/**",
    "scripts/**",
    "src/**"
  ],
  "extends": "./tsconfig.json"
}
